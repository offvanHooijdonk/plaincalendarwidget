        <receiver
            android:name=".glance.PlainGlanceWidgetReceiver"
            android:exported="false"
            android:label="@string/app_name">

            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="android.intent.action.TIME_SET" />
                <action android:name="android.intent.action.TIMEZONE_CHANGED" />
                <action android:name="android.intent.action.DATE_CHANGED" />
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/calendar_widget_info" />
        </receiver>

        <service
            android:name="by.offvanhooijdonk.plaincalendar.widget.data.calendars.CalendarsRemoteService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />

        <service
            android:name="by.offvanhooijdonk.plaincalendar.widget.data.calendars.job.CalendarChangeJobService"
            android:permission="android.permission.BIND_JOB_SERVICE" />
    </application>

</manifest>
