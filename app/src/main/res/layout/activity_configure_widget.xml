<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_v_padding"
    android:paddingEnd="@dimen/activity_h_padding"
    android:paddingStart="@dimen/activity_h_padding"
    android:paddingTop="@dimen/activity_v_padding">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">

                    <TextView
                        android:id="@+id/txtCalNumLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/calendars_selected"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/txtCalendarsNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@id/txtCalNumLabel"
                        android:text="0"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:id="@+id/blockCalendarsIcons"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtCalNumLabel"
                        android:orientation="horizontal"
                        android:paddingStart="4dp">

                    </LinearLayout>
                </RelativeLayout>

                <Button
                    android:id="@+id/btnPickCalendars"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="@string/btn_pick_calendars" />
            </RelativeLayout>
        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabCreateWidget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="@dimen/activity_v_padding"
            android:layout_marginEnd="@dimen/activity_h_padding"
            android:src="@drawable/ic_done_24dp"
            app:fabSize="normal" />
    </android.support.design.widget.CoordinatorLayout>

    <LinearLayout
        android:id="@+id/viewNoWidgets"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99ffffff"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_widgets_yet" />
    </LinearLayout>
</FrameLayout>