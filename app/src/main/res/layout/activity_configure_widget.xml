<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_v_padding"
    android:paddingEnd="@dimen/activity_h_padding"
    android:paddingStart="@dimen/activity_h_padding"
    android:paddingTop="@dimen/activity_v_padding">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/txtCalNumLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/calendars_selected"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtCalendarsNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/txtCalNumLabel"
                android:text="0"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/blockCalendarsIcons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="4dp"
                android:layout_below="@id/txtCalNumLabel"
                android:orientation="horizontal">

            </LinearLayout>
        </RelativeLayout>

        <Button
            android:id="@+id/btnPickCalendars"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="@string/btn_pick_calendars" />
    </RelativeLayout>
</LinearLayout>