<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootEventItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="8dp"
    android:paddingStart="8dp">

    <ImageView
        android:id="@+id/imgColor"
        android:layout_width="@dimen/event_color_size"
        android:layout_height="@dimen/event_color_size"
        android:layout_alignTop="@id/txtEventTitle"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="6dp"
        android:src="@drawable/circle"
        android:tint="@color/colorPrimary" />

    <TextView
        android:id="@+id/txtDateRange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imgColor"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/fish_date"
        android:textColor="@color/md_white_1000"
        android:textSize="@dimen/widget_date_text" />

    <TextView
        android:id="@+id/txtEventTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/txtDateRange"
        android:layout_below="@id/txtDateRange"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="@string/fish_short"
        android:textColor="@color/md_white_1000"
        android:textSize="@dimen/widget_event_title" />

</RelativeLayout>