<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/widget_back_corner" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/widget_padding_h"
        android:paddingTop="@dimen/widget_padding_v"
        android:paddingEnd="@dimen/widget_padding_h"
        android:paddingBottom="@dimen/widget_padding_v">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/initial_layout_item" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/initial_layout_item" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/initial_layout_item" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/initial_layout_item" />
    </LinearLayout>
</FrameLayout>
